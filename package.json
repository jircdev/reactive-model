{
	"name": "@beyond-js/reactive",
	"version": "1.0.1",
	"title": "Reactive",
	"description": "A model for creating reactive objects with events that enable the creation of reactive models based on the Observer pattern.",
	"layout": "reactive-layout",
	"template": "template/template.json",
	"languages": {
		"default": "en",
		"supported": [
			"en",
			"es"
		]
	},
	"modules": {
		"path": "modules"
	},
	"deployment": {
		"distributions": [
			{
				"name": "web-typed",
				"environment": "development",
				"backend": "backend",
				"platform": "web",
				"ports": {
					"bundles": 7530
				},
				"ts": {
					"compiler": "tsc"
				}
			},
			{
				"name": "web",
				"environment": "development",
				"backend": "backend",
				"platform": "web",
				"ports": {
					"bundles": 8530
				}
			},
			{
				"name": "backend",
				"environment": "development",
				"platform": "backend",
				"ports": {
					"bundles": 8780,
					"http": 8581,
					"inspect": 8782
				}
			}
		]
	},
	"dependencies": {
		"@beyond-js/backend": "~0.1.4",
		"@beyond-js/events": "^0.0.6",
		"@beyond-js/kernel": "~0.1.8",
		"@beyond-js/local": "~0.1.3",
		"@beyond-js/react-18-widgets": "~0.0.5",
		"dexie": "^3.2.3",
		"socket.io-client": "^4.5.4",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@beyond-js/ssr": "^0.1.2",
		"@types/dexie": "^1.3.1",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"sqlite": "^4.1.2",
		"sqlite3": "^5.1.6"
	}
}
