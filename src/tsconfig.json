{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"lib": ["ES2018"],
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./modules",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": false,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"reactive/events": ["./modules/events/index.ts"],
			"reactive/model": ["./modules/model/index.ts"],
			"reactive/entities/item": ["./modules/entities/item/index.ts"],
			"reactive/entities/collection": ["./modules/entities/collection/index.ts"],
			"reactive/structures/map": ["./modules/structures/map/index.ts"],
			"reactive/structures/array": ["./modules/structures/array/index.ts"],
			"reactive/structures/tree": ["./modules/structures/tree/index.ts"]
		}
	},
	"include": ["modules/**/*", "__tests__/**/*"],
	"exclude": ["node_modules", "dist", ".beyond"]
}
